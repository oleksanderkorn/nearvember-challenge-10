{
    "name": "nearvember-challenge-8",
    "version": "0.1.0",
    "private": true,
    "homepage": "https://oleksanderkorn.github.io/nearvember-challenge-8/",
    "dependencies": {
        "@craco/craco": "^6.4.0",
        "@headlessui/react": "^1.4.1",
        "@heroicons/react": "^1.0.5",
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.1.0",
        "@testing-library/user-event": "^12.1.10",
        "autoprefixer": "^9",
        "env-cmd": "~10.1.0",
        "gh-pages": "^3.2.3",
        "moment": "^2.29.1",
        "near-api-js": "^0.43.1",
        "postcss": "^7",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-scripts": "4.0.3",
        "react-use": "^17.3.1",
        "tailwindcss": "npm:@tailwindcss/postcss7-compat",
        "web-vitals": "^1.0.1"
    },
    "scripts": {
        "start": "env-cmd -f ./neardev/dev-account.env craco start",
        "build": "yarn build:contract && craco build",
        "test": "craco test",
        "eject": "craco eject",
        "build:contract": "node contract/compile.js",
        "build:contract:debug": "node contract/compile.js --debug",
        "dev:deploy:contract": "near dev-deploy",
        "deploy:contract": "near deploy",
        "deploy:pages": "gh-pages -d build/",
        "deploy": "yarn build && yarn deploy:contract && yarn deploy:pages",
        "dev:deploy": "yarn build:contract:debug && yarn dev:deploy:contract"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
